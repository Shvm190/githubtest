{
  "files": [
    {
      "path": "path_to_file1.csv",
      "format": "csv",
      "options": {
        "header": true,
        "inferSchema": true,
        "delimiter": ","
      }
    },
    {
      "path": "path_to_file2.json",
      "format": "json",
      "options": {}
    },
    {
      "path": "path_to_file3.parquet",
      "format": "parquet",
      "options": {}
    }
  ],
  "output_path": "path_to_output_folder",
  "metrics": {
    "numeric": ["count", "missing", "min", "max", "mean", "median", "std", "skewness", "kurtosis"],
    "string": ["count", "missing", "cardinality", "distribution", "unique_values"],
    "timestamp": ["count", "missing", "min", "max"],
    "custom_aggregations": {
      "price": {
        "sum": "sum",
        "average": "avg"
      }
    }
  },
  "range_checks": {
    "numeric": {
      "price": {"min": 0, "max": 1000},
      "quantity": {"min": 1, "max": 100}
    },
    "timestamp": {
      "purchase_date": {"min": "2020-01-01", "max": "2023-12-31"}
    }
  }
}
